## Admin API / session tokens
VITE_ADMIN_TOKEN=CHANGEME_ADMIN_EDGE_TOKEN
EASYMO_ADMIN_TOKEN=${VITE_ADMIN_TOKEN}
ADMIN_TOKEN=${VITE_ADMIN_TOKEN}
ADMIN_SESSION_SECRET=CHANGEME_SESSION_SECRET_AT_LEAST_16_CHARS

ADMIN_SESSION_MAX_AGE_DAYS=30
ADMIN_SESSION_TTL_SECONDS=43200
ADMIN_ACCESS_CREDENTIALS="[{\"actorId\":\"00000000-0000-0000-0000-000000000001\",\"token\":\"CHANGEME-OPERATOR-TOKEN\",\"label\":\"Ops\"}]"

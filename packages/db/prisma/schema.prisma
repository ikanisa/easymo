generator client {
  provider = "prisma-client-js"
  previewFeatures = ["postgresqlExtensions"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Tenant {
  id         String   @id @default(uuid()) @db.Uuid
  name       String
  countries  String[] @default([])
  createdAt  DateTime @default(now())
  agentConfigs AgentConfig[]
  leads      Lead[]
  calls      Call[]
  walletAccounts WalletAccount[]
  commissionSchedules CommissionSchedule[]
  marketplaceSettings MarketplaceSettings[]
  agents     Agent[]
  buyerProfiles BuyerProfile[]
  vendorProfiles VendorProfile[]
  intents Intent[]
  walletTransactions WalletTransaction[]
  brandGuides BrandGuide[]
  figures Figure[]
  campaigns Campaign[]
  jobListings JobListing[]
  propertyListings PropertyListing[]
  farmerListings FarmerListing[]
  menuCategories MenuCategory[]
  reservations Reservation[]
  jobSeekers JobSeeker[]
  tokenPartners TokenPartner[]
}

model AgentConfig {
  id          String   @id @default(uuid()) @db.Uuid
  tenantId    String   @db.Uuid
  tenant      Tenant   @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  product     String
  languages   String[] @default(["en"])
  voice       String   @default("Cedar")
  objective   String
  systemPrompt String
  tools       Json     @default("[]")
  policy      Json     @default("[]")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @default(now())
}

model Lead {
  id            String   @id @default(uuid()) @db.Uuid
  tenantId      String   @db.Uuid
  tenant        Tenant   @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  phoneE164     String
  name          String?
  tags          String[] @default([])
  optIn         Boolean  @default(false)
  locale        String   @default("en")
  lastContactAt DateTime?
  createdAt     DateTime @default(now())
  calls         Call[]

  @@unique([tenantId, phoneE164])
}

model Call {
  id          String   @id @default(uuid()) @db.Uuid
  tenantId    String   @db.Uuid
  tenant      Tenant   @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  leadId      String?  @db.Uuid
  lead        Lead?    @relation(fields: [leadId], references: [id], onDelete: SetNull)
  direction   CallDirection
  platform    CallPlatform
  startedAt   DateTime @default(now())
  endedAt     DateTime?
  status      String?
  recordingUrl String?
  transcript   String?
  summary      Json?
  agentMetrics Json?
  handoffTo    String?
  region       String?
  createdAt    DateTime @default(now())
  dispositions Disposition[]
}

model Disposition {
  id        String   @id @default(uuid()) @db.Uuid
  callId    String   @db.Uuid
  call      Call     @relation(fields: [callId], references: [id], onDelete: Cascade)
  code      String
  notes     String?
  createdAt DateTime @default(now())
}

model OptOut {
  phoneE164 String  @id
  reason    String?
  ts        DateTime @default(now())
}

model WalletAccount {
  id         String   @id @default(uuid()) @db.Uuid
  tenantId   String   @db.Uuid
  tenant     Tenant   @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  ownerType  WalletOwnerType
  ownerId    String
  currency   String
  status     String   @default("active")
  balance    Decimal  @default(0) @db.Decimal(18, 4)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @default(now())
  entries    WalletEntry[]
  vendorProfile VendorProfile? @relation("VendorWallet")
  buyerProfile BuyerProfile? @relation("BuyerWallet")
}

model WalletTransaction {
  id         String   @id @default(uuid()) @db.Uuid
  tenantId   String   @db.Uuid
  tenant     Tenant   @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  type       String
  reference  String?
  metadata   Json?
  createdAt  DateTime @default(now())
  entries    WalletEntry[]
}

model WalletEntry {
  id            String   @id @default(uuid()) @db.Uuid
  transactionId String   @db.Uuid
  accountId     String   @db.Uuid
  amount        Decimal  @db.Decimal(18, 4)
  direction     WalletEntryDirection
  createdAt     DateTime @default(now())
  transaction   WalletTransaction @relation(fields: [transactionId], references: [id], onDelete: Cascade)
  account       WalletAccount     @relation(fields: [accountId], references: [id], onDelete: Cascade)

  @@index([accountId])
  @@index([transactionId])
}

model TokenPartner {
  id           String   @id @default(uuid()) @db.Uuid
  tenantId     String   @db.Uuid
  tenant       Tenant   @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  name         String
  whatsappE164 String?  @unique @map("whatsapp_e164")
  category     String?  // petrol_station, supermarket, restaurant, pharmacy, retail, services, utility, transport, accommodation
  isActive     Boolean  @default(true) @map("is_active")
  metadata     Json?
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @default(now()) @updatedAt @map("updated_at")

  @@index([category, isActive])
  @@index([isActive, createdAt])
  @@map("token_partners")
}


model CommissionSchedule {
  id         String   @id @default(uuid()) @db.Uuid
  tenantId   String   @db.Uuid
  tenant     Tenant   @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  product    String
  rate       Decimal  @db.Decimal(5, 4)
  flatFee    Decimal? @db.Decimal(18, 4)
  active     Boolean  @default(true)
  effectiveAt DateTime @default(now())
  createdAt  DateTime @default(now())
}

model MarketplaceSettings {
  id                 String   @id @default(uuid()) @db.Uuid
  tenantId           String   @db.Uuid
  tenant             Tenant   @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  freeContacts       Int      @default(30)
  windowDays         Int      @default(30)
  subscriptionTokens Int      @default(4)
  updatedAt          DateTime @default(now())

  @@unique([tenantId])
}

model VendorProfile {
  id              String   @id @default(uuid()) @db.Uuid
  tenantId        String   @db.Uuid
  tenant          Tenant   @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  name            String
  region          String
  categories      String[]
  rating          Decimal? @db.Decimal(4, 2)
  fulfilmentRate  Decimal? @db.Decimal(5, 4)
  avgResponseMs   Int?
  totalTrips      Int      @default(0)
  walletAccountId String?  @db.Uuid @unique
  walletAccount   WalletAccount? @relation("VendorWallet", fields: [walletAccountId], references: [id], onDelete: SetNull)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @default(now())
  quotes          Quote[]

  @@index([tenantId, region])
}

model BuyerProfile {
  id              String   @id @default(uuid()) @db.Uuid
  tenantId        String   @db.Uuid
  tenant          Tenant   @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  name            String
  segment         String?
  walletAccountId String?  @db.Uuid @unique
  walletAccount   WalletAccount? @relation("BuyerWallet", fields: [walletAccountId], references: [id], onDelete: SetNull)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @default(now())
  intents         Intent[]

  @@index([tenantId, segment])
}

model Intent {
  id         String   @id @default(uuid()) @db.Uuid
  tenantId   String   @db.Uuid
  tenant     Tenant   @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  buyerId    String   @db.Uuid
  buyer      BuyerProfile @relation(fields: [buyerId], references: [id], onDelete: Cascade)
  channel    String
  payload    Json
  status     IntentStatus @default(pending)
  expiresAt  DateTime?
  createdAt  DateTime @default(now())
  quotes     Quote[]

  @@index([tenantId, status])
}

model Quote {
  id         String   @id @default(uuid()) @db.Uuid
  intentId   String   @db.Uuid
  vendorId   String   @db.Uuid
  price      Decimal  @db.Decimal(18, 4)
  currency   String
  etaMinutes Int?
  status     QuoteStatus @default(pending)
  createdAt  DateTime @default(now())
  acceptedAt DateTime?
  intent     Intent   @relation(fields: [intentId], references: [id], onDelete: Cascade)
  vendor     VendorProfile @relation(fields: [vendorId], references: [id], onDelete: Cascade)
  purchase   Purchase?

  @@index([intentId, status])
}

model Purchase {
  id             String   @id @default(uuid()) @db.Uuid
  quoteId        String   @db.Uuid @unique
  quote          Quote    @relation(fields: [quoteId], references: [id], onDelete: Cascade)
  transactionId  String?  @db.Uuid
  status         PurchaseStatus @default(pending)
  createdAt      DateTime @default(now())
  fulfilledAt    DateTime?
}

enum WalletOwnerType {
  vendor
  buyer
  platform
  commission
}

enum WalletEntryDirection {
  debit
  credit
}

enum IntentStatus {
  pending
  matched
  expired
  cancelled
}

enum QuoteStatus {
  pending
  accepted
  rejected
  expired
}

enum PurchaseStatus {
  pending
  completed
  cancelled
  failed
}

enum CallDirection {
  inbound
  outbound
}

// ===== Agent Management =====

model Agent {
  id                String   @id @default(uuid()) @db.Uuid
  tenantId          String   @db.Uuid
  tenant            Tenant   @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  name              String
  slug              String
  persona           String   @default("general")
  status            String   @default("active")
  currentRevisionId String?  @db.Uuid @unique
  currentRevision   AgentRevision? @relation("AgentCurrentRevision", fields: [currentRevisionId], references: [id], onDelete: SetNull)
  createdAt         DateTime @default(now())
  updatedAt         DateTime @default(now())
  revisions         AgentRevision[] @relation("AgentRevisions")
  documents         AgentDocument[]
  tasks             AgentTask[]

  @@index([tenantId, slug], map: "agents_tenant_slug_idx")
  @@unique([tenantId, slug], map: "agents_tenant_slug_unique")
}

model AgentRevision {
  id          String   @id @default(uuid()) @db.Uuid
  agentId     String   @db.Uuid
  agent       Agent    @relation("AgentRevisions", fields: [agentId], references: [id], onDelete: Cascade)
  version     Int      @default(1)
  instructions String
  tools       Json     @default("[]")
  metadata    Json     @default("{}")
  published   Boolean  @default(false)
  createdBy   String?
  createdAt   DateTime @default(now())
  currentFor  Agent?   @relation("AgentCurrentRevision")

  @@index([agentId, version], map: "agent_revisions_agent_version_idx")
}

model AgentDocument {
  id        String   @id @default(uuid()) @db.Uuid
  agentId   String   @db.Uuid
  agent     Agent    @relation(fields: [agentId], references: [id], onDelete: Cascade)
  title     String
  source    String   @default("text") // text|url|file
  url       String?
  content   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())

  @@index([agentId], map: "agent_docs_agent_idx")
}

model AgentTask {
  id            String   @id @default(uuid()) @db.Uuid
  agentId       String   @db.Uuid
  agent         Agent    @relation(fields: [agentId], references: [id], onDelete: Cascade)
  title         String
  description   String?
  payloadSchema Json     @default("{}")
  createdAt     DateTime @default(now())
  updatedAt     DateTime @default(now())

  @@index([agentId], map: "agent_tasks_agent_idx")
}

// ===== Video Studio =====

model VideoBrandGuide {
  id        String   @id @default(uuid()) @db.Uuid
  slug      String   @unique
  title     String
  summary   String?
  tone      Json?    @map("tone_of_voice")
  palette   Json?    @map("color_palette")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
  products  Product[]
  templates VideoTemplate[]
}

model Product {
  id           String      @id @default(uuid()) @db.Uuid
  slug         String      @unique
  name         String
  description  String?
  keywords     String[]    @default([])
  media        Json?       @map("media_assets")
  brandGuideId String?     @db.Uuid @map("brand_guide_id")
  brandGuide   VideoBrandGuide? @relation(fields: [brandGuideId], references: [id], onDelete: SetNull)
  createdAt    DateTime    @default(now()) @map("created_at")
  updatedAt    DateTime    @updatedAt @map("updated_at")

  @@index([brandGuideId], map: "products_brand_guide_idx")
}

model VideoTemplate {
  id           String      @id @default(uuid()) @db.Uuid
  slug         String      @unique
  title        String
  description  String?
  rightsStart  DateTime?   @map("rights_start")
  rightsEnd    DateTime?   @map("rights_end")
  brandGuideId String?     @db.Uuid @map("brand_guide_id")
  brandGuide   VideoBrandGuide? @relation(fields: [brandGuideId], references: [id], onDelete: SetNull)
  createdAt    DateTime    @default(now()) @map("created_at")
  updatedAt    DateTime    @updatedAt @map("updated_at")
  scripts      VideoScript[]
}

model VideoScript {
  id            String        @id @default(uuid()) @db.Uuid
  templateId    String        @db.Uuid @map("template_id")
  template      VideoTemplate @relation(fields: [templateId], references: [id], onDelete: Cascade)
  profileId     String?       @map("profile_id")
  whatsappMsisdn String?      @map("whatsapp_msisdn")
  locale        String
  synopsis      String?
  metadata      Json?         @map("metadata_json")
  prompt        Json?         @map("prompt_json")
  plan          Json?         @map("plan_json")
  status        String        @default("pending_planning")
  createdAt     DateTime      @default(now()) @map("created_at")
  updatedAt     DateTime      @updatedAt @map("updated_at")
  jobs          VideoJob[]

  @@index([templateId], map: "video_scripts_template_idx")
}

model VideoJob {
  id             String        @id @default(uuid()) @db.Uuid
  scriptId       String        @db.Uuid @map("script_id")
  script         VideoScript   @relation(fields: [scriptId], references: [id], onDelete: Cascade)
  status         String        @default("queued")
  queueStatus    String        @default("pending") @map("queue_status")
  queueAttempts  Int           @default(0) @map("queue_attempts")
  queuedAt       DateTime?     @map("queued_at")
  soraRequestId  String?       @map("sora_request_id")
  shotplanJson   Json?         @map("shotplan_json")
  masterPath     String?       @map("master_path")
  whatsappPath   String?       @map("whatsapp_path")
  whatsappStatus String        @default("pending") @map("whatsapp_status")
  provenance     Json?         @map("provenance_json")
  createdAt      DateTime      @default(now()) @map("created_at")
  updatedAt      DateTime      @updatedAt @map("updated_at")
  queueEntries   SoraJobQueue[]

  @@index([queueStatus], map: "video_jobs_queue_status_idx")
  @@index([status], map: "video_jobs_status_idx")
}

model SoraJobQueue {
  id        String   @id @default(uuid()) @db.Uuid
  jobId     String   @db.Uuid @map("job_id")
  job       VideoJob @relation(fields: [jobId], references: [id], onDelete: Cascade)
  status    String   @default("pending")
  payload   Json     @default("{}")
  visibleAt DateTime @default(now()) @map("visible_at")
  attempts  Int      @default(0)
  lastError String?  @map("last_error")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@index([status, visibleAt], map: "sora_job_queue_status_visible_idx")
}

model BrandGuide {
  id              String   @id @default(uuid()) @db.Uuid
  tenantId        String   @db.Uuid
  tenant          Tenant   @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  name            String
  voiceTone       String?
  legalDisclaimer String?
  safetyGuidelines String?
  brandPillars    String[] @default([])
  forbiddenTerms  String[] @default([])
  directives      Json     @default("{}")
  createdAt       DateTime @default(now())
  updatedAt       DateTime @default(now())
  figures         Figure[]
  campaigns       Campaign[]

  @@index([tenantId], map: "brand_guides_tenant_idx")
}

model Campaign {
  id                   String   @id @default(uuid()) @db.Uuid
  tenantId             String   @db.Uuid
  tenant               Tenant   @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  brandGuideId         String?  @db.Uuid
  brandGuide           BrandGuide? @relation(fields: [brandGuideId], references: [id], onDelete: SetNull)
  name                 String
  status               String   @default("active")
  generationKillSwitch Boolean  @default(false)
  dailyCostCapUsd      Decimal? @db.Decimal(12, 2)
  metadata             Json     @default("{}")
  createdAt            DateTime @default(now())
  updatedAt            DateTime @default(now())
  figures              Figure[]
  limits               GenerationLimit[]

  @@index([tenantId], map: "campaigns_tenant_idx")
  @@index([brandGuideId], map: "campaigns_brand_guide_idx")
}

model Figure {
  id               String   @id @default(uuid()) @db.Uuid
  tenantId         String   @db.Uuid
  tenant           Tenant   @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  campaignId       String?  @db.Uuid
  campaign         Campaign? @relation(fields: [campaignId], references: [id], onDelete: SetNull)
  brandGuideId     String?  @db.Uuid
  brandGuide       BrandGuide? @relation(fields: [brandGuideId], references: [id], onDelete: SetNull)
  name             String
  slug             String?
  rightsStart      DateTime?
  rightsEnd        DateTime?
  allowedCountries String[] @default([])
  allowedRegions   String[] @default([])
  policyNotes      String?
  legalNotes       String?
  metadata         Json     @default("{}")
  createdAt        DateTime @default(now())
  updatedAt        DateTime @default(now())

  @@index([tenantId], map: "figures_tenant_idx")
  @@index([campaignId], map: "figures_campaign_idx")
  @@index([brandGuideId], map: "figures_brand_guide_idx")
}

model GenerationLimit {
  id         String   @id @default(uuid()) @db.Uuid
  campaignId String   @db.Uuid
  campaign   Campaign @relation(fields: [campaignId], references: [id], onDelete: Cascade)
  date       DateTime @db.Date
  spendUsd   Decimal  @default(0) @db.Decimal(14, 2)
  jobsCount  Int      @default(0)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @default(now())

  @@unique([campaignId, date], map: "generation_limits_campaign_date_key")
}

enum CallPlatform {
  pstn
  sip
}

// ===== Job Board =====

model JobListing {
  id          String   @id @default(uuid()) @db.Uuid
  tenantId    String   @db.Uuid
  tenant      Tenant   @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  title       String
  description String
  category    String
  jobType     String   @map("job_type") // full_time, part_time, contract, gig
  location    String
  payMin      Decimal? @map("pay_min") @db.Decimal(18, 2)
  payMax      Decimal? @map("pay_max") @db.Decimal(18, 2)
  payType     String   @default("fixed") @map("pay_type") // hourly, fixed, monthly
  currency    String   @default("RWF")
  status      String   @default("open") // open, closed, filled
  postedBy    String   @map("posted_by")
  expiresAt   DateTime? @map("expires_at")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")
  applications JobApplication[]
  embedding   Unsupported("vector(1536)")?

  @@index([tenantId, status])
  @@map("job_listings")
}

model JobSeeker {
  id          String   @id @default(uuid()) @db.Uuid
  tenantId    String   @db.Uuid
  tenant      Tenant   @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  name        String
  phone       String   @unique
  skills      String[]
  experience  String?
  location    String?
  resumeUrl   String?  @map("resume_url")
  lastActive  DateTime @default(now()) @map("last_active")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")
  applications JobApplication[]
  embedding   Unsupported("vector(1536)")?

  @@index([tenantId])
  @@map("job_seekers")
}

model JobApplication {
  id          String   @id @default(uuid()) @db.Uuid
  jobId       String   @db.Uuid @map("job_id")
  job         JobListing @relation(fields: [jobId], references: [id], onDelete: Cascade)
  seekerId    String   @db.Uuid @map("seeker_id")
  seeker      JobSeeker @relation(fields: [seekerId], references: [id], onDelete: Cascade)
  status      String   @default("pending") // pending, reviewed, interviewed, hired, rejected
  coverLetter String?  @map("cover_letter")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  @@unique([jobId, seekerId])
  @@map("job_applications")
}

model JobMatch {
  id          String   @id @default(uuid()) @db.Uuid
  jobId       String   @db.Uuid @map("job_id")
  seekerId    String   @db.Uuid @map("seeker_id")
  score       Float
  status      String   @default("suggested") // suggested, notified, applied
  createdAt   DateTime @default(now()) @map("created_at")

  @@index([jobId])
  @@index([seekerId])
  @@map("job_matches")
}

// ===== Real Estate =====

model PropertyListing {
  id          String   @id @default(uuid()) @db.Uuid
  tenantId    String   @db.Uuid
  tenant      Tenant   @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  title       String
  description String
  type        String   // sale, rent_short, rent_long
  propertyType String  @map("property_type") // house, apartment, land, commercial
  bedrooms    Int?
  bathrooms   Int?
  areaSqm     Float?   @map("area_sqm")
  price       Decimal  @db.Decimal(18, 2)
  currency    String   @default("RWF")
  location    Json     // { lat, lng, address }
  amenities   String[]
  images      String[]
  status      String   @default("active") // active, sold, rented, inactive
  ownerId     String   @map("owner_id")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")
  embedding   Unsupported("vector(1536)")?

  @@index([tenantId, status])
  @@index([type])
  @@map("property_listings")
}

// ===== Farmer Market =====

model Commodity {
  id          String   @id @default(uuid()) @db.Uuid
  code        String   @unique
  name        String
  category    String
  defaultUnit String   @map("default_unit")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")
  listings    FarmerListing[]

  @@map("commodities")
}

model FarmerListing {
  id          String   @id @default(uuid()) @db.Uuid
  tenantId    String   @db.Uuid
  tenant      Tenant   @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  commodityId String   @db.Uuid @map("commodity_id")
  commodity   Commodity @relation(fields: [commodityId], references: [id], onDelete: Restrict)
  variety     String?
  grade       String?
  quantity    Float
  unit        String
  price       Decimal? @db.Decimal(18, 2)
  currency    String   @default("RWF")
  location    String   // City/Region
  status      String   @default("active") // active, sold, expired
  farmerId    String   @map("farmer_id")
  expiresAt   DateTime? @map("expires_at")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  @@index([tenantId, status])
  @@index([commodityId])
  @@map("farmer_listings")
}

// ===== Waiter / Booking =====

model MenuCategory {
  id          String   @id @default(uuid()) @db.Uuid
  tenantId    String   @db.Uuid
  tenant      Tenant   @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  name        String
  description String?
  sortOrder   Int      @default(0) @map("sort_order")
  items       MenuItem[]

  @@map("menu_categories")
}

model MenuItem {
  id          String   @id @default(uuid()) @db.Uuid
  categoryId  String   @db.Uuid @map("category_id")
  category    MenuCategory @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  name        String
  description String?
  price       Decimal  @db.Decimal(18, 2)
  currency    String   @default("RWF")
  imageUrl    String?  @map("image_url")
  available   Boolean  @default(true)
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  @@map("menu_items")
}

model Reservation {
  id          String   @id @default(uuid()) @db.Uuid
  tenantId    String   @db.Uuid
  tenant      Tenant   @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  customerId  String   @map("customer_id") // Phone or User ID
  customerName String  @map("customer_name")
  tableId     String?  @map("table_id")
  partySize   Int      @map("party_size")
  startTime   DateTime @map("start_time")
  endTime     DateTime? @map("end_time")
  status      String   @default("confirmed") // pending, confirmed, cancelled, completed
  notes       String?
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  @@index([tenantId, startTime])
  @@map("reservations")
}

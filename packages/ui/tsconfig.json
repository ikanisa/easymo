{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": false,
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "target": "ES2020",
    "lib": ["DOM", "ES2020"],
    "types": ["react"],
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": [
    "dist",
    "node_modules",
    "src/**/*.stories.tsx"
  ]
}

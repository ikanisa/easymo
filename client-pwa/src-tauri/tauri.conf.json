{
  "$schema": "../../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "EasyMO Client",
  "version": "1.0.0",
  "identifier": "com.easymo.client",
  "build": {
    "frontendDist": "out",
    "devUrl": "http://localhost:3002",
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build:desktop"
  },
  "app": {
    "windows": [
      {
        "title": "EasyMO Client Portal",
        "width": 420,
        "height": 800,
        "minWidth": 375,
        "minHeight": 667,
        "decorations": true,
        "transparent": false,
        "fullscreen": false,
        "resizable": true,
        "center": true,
        "visible": true
      }
    ],
    "security": {
      "csp": {
        "default-src": "'self'",
        "connect-src": "'self' https://*.supabase.co wss://*.supabase.co",
        "script-src": "'self' 'wasm-unsafe-eval'",
        "style-src": "'self' 'unsafe-inline'",
        "img-src": "'self' data: https://*.supabase.co blob: https:",
        "font-src": "'self' data:",
        "worker-src": "'self' blob:",
        "frame-src": "'none'"
      }
    },
    "withGlobalTauri": true
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "publisher": "EasyMO Platform",
    "copyright": "Copyright Â© 2025 EasyMO",
    "shortDescription": "EasyMO Client Portal - Order and manage services",
    "longDescription": "EasyMO Client Portal desktop application for ordering food, drinks, and managing services at partner venues.",
    "macOS": {
      "minimumSystemVersion": "10.15"
    },
    "windows": {
      "webviewInstallMode": {
        "type": "downloadBootstrapper"
      }
    },
    "linux": {}
  }
}

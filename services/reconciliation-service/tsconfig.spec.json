{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "./",
    "module": "commonjs",
    "esModuleInterop": true,
    "types": ["node", "jest"],
    "typeRoots": ["../../node_modules/.pnpm/node_modules/@types", "../../node_modules/@types"],
    "baseUrl": "./",
    "paths": {
      "@easymo/commons": ["../../packages/commons/src/index.ts"],
      "@easymo/messaging": ["./test/mocks/messaging.ts"],
      "*": ["*", "../../node_modules/.pnpm/node_modules/*", "../../node_modules/.pnpm/node_modules/@types/*", "../../node_modules/*"]
    }
  },
  "include": ["src/**/*", "test/**/*"],
  "exclude": ["dist", "node_modules"]
}

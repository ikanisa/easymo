{
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "module": "CommonJS",
    "target": "ES2021",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "lib": ["ES2021"],
    "declaration": true
  },
  "include": ["src/**/*"],
  "exclude": ["dist", "node_modules", "test"]
}

{
  "name": "@easymo/voice-media-bridge",
  "version": "1.0.0",
  "description": "WebRTC media bridge between WhatsApp and OpenAI Realtime API",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "docker:build": "docker build -t easymo/voice-media-bridge .",
    "docker:run": "docker run -p 8080:8080 --env-file .env easymo/voice-media-bridge"
  },
  "dependencies": {
    "@types/node": "^20.10.0",
    "express": "^4.18.2",
    "ws": "^8.16.0",
    "pino": "^8.17.2",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "typescript": "^5.3.3",
    "ts-node-dev": "^2.0.0",
    "@types/express": "^4.17.21",
    "@types/ws": "^8.5.10"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}

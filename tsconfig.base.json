{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": ["ES2022"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": ".",
    "paths": {
      "@va/shared": ["packages/shared/src/index.ts"],
      "@va/shared/*": ["packages/shared/src/*"],
      "@easymo/ui": ["packages/ui/src/index.ts"],
      "@easymo/ui/*": ["packages/ui/src/*"],
      "@easymo/ui/tokens": ["packages/ui/tokens/index.ts"]
    }
  }
}

{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": ["ES2022"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": ".",
    "paths": {
      "@va/shared": ["packages/shared/src/index.ts"],
      "@va/shared/*": ["packages/shared/src/*"],
      "@easymo/ui": ["packages/ui/src/index.ts"],
      "@easymo/ui/*": ["packages/ui/src/*"],
      "@easymo/clients": ["packages/clients/src/index.ts"],
      "@easymo/clients/*": ["packages/clients/src/*"],
      "@easymo/config": ["packages/config/src/index.ts"],
      "@easymo/config/*": ["packages/config/src/*"],
      "@easymo/utils": ["packages/utils/src/index.ts"],
      "@easymo/utils/*": ["packages/utils/src/*"]
    }
  }
}

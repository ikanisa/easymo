{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": ["ES2022"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": ".",
    "paths": {
      "@va/shared": ["packages/shared/src/index.ts"],
      "@va/shared/*": ["packages/shared/src/*"],
      "@easymo/config-env": ["packages/config/env.ts"],
      "@easymo/utils-log": ["packages/utils/log/src/index.ts"],
      "@easymo/utils-log/*": ["packages/utils/log/src/*"]
    }
  }
}

{
  "version": "6.3",
  "screens": [
    {
      "id": "s_baskets_list",
      "title": "Baskets",
      "layout": { "type": "single_column" },
      "widgets": [
        {
          "type": "radio_list",
          "id": "w_baskets",
          "options_data_binding": "baskets"
        },
        {
          "type": "footer_buttons",
          "buttons": [
            {
              "id": "BTN_BASKETS_REFRESH",
              "title": "Refresh",
              "action": {
                "type": "data_exchange",
                "id": "a_admin_baskets_refresh"
              }
            }
          ]
        }
      ],
      "events": {
        "on_item_select": {
          "widget_id": "w_baskets",
          "action": {
            "type": "navigate",
            "next": "s_basket_detail",
            "params": { "basket_id": "${selected.id}" }
          }
        }
      }
    },
    {
      "id": "s_basket_detail",
      "title": "Basket detail",
      "layout": { "type": "single_column" },
      "widgets": [
        {
          "type": "text_block",
          "id": "w_basket",
          "text": "${params.basket_id}"
        },
        {
          "type": "footer_buttons",
          "buttons": [
            {
              "id": "BTN_APPROVE",
              "title": "Approve",
              "action": {
                "type": "data_exchange",
                "id": "a_admin_basket_approve",
                "fields": { "basket_id": "${params.basket_id}" }
              }
            },
            {
              "id": "BTN_REVOKE",
              "title": "Revoke token",
              "action": {
                "type": "data_exchange",
                "id": "a_admin_basket_revoke",
                "fields": { "basket_id": "${params.basket_id}" }
              }
            },
            {
              "id": "BTN_REGEN",
              "title": "New token",
              "action": {
                "type": "data_exchange",
                "id": "a_admin_basket_regen",
                "fields": { "basket_id": "${params.basket_id}" }
              }
            },
            {
              "id": "BTN_CLOSE",
              "title": "Close",
              "action": {
                "type": "data_exchange",
                "id": "a_admin_basket_close",
                "fields": { "basket_id": "${params.basket_id}" }
              }
            }
          ]
        }
      ]
    }
  ]
}

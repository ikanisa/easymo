{
  "version": "6.3",
  "screens": [
    {
      "id": "s_settings",
      "title": "Settings",
      "layout": { "type": "single_column" },
      "data_exchange": { "submit": { "action": { "id": "a_save_settings" } } },
      "widgets": [
        { "type": "text_input", "id": "momo_code", "label": "MoMo code" },
        {
          "type": "text_input",
          "id": "service_charge_pct",
          "label": "Service %",
          "input_type": "number"
        },
        {
          "type": "dropdown",
          "id": "allow_direct_chat",
          "label": "Direct chat",
          "options": [
            { "id": "true", "title": "Enabled" },
            { "id": "false", "title": "Disabled" }
          ]
        },
        {
          "type": "text_input",
          "id": "default_prep_minutes",
          "label": "Prep minutes",
          "input_type": "number"
        },
        {
          "type": "text_input",
          "id": "payment_instructions",
          "label": "Payment instructions"
        },
        {
          "type": "footer_buttons",
          "buttons": [
            {
              "id": "BTN_SAVE",
              "title": "Save",
              "action": {
                "type": "data_exchange",
                "id": "a_save_settings",
                "fields": {
                  "momo_code": "${widgets.momo_code.value}",
                  "service_charge_pct": "${widgets.service_charge_pct.value}",
                  "allow_direct_chat": "${widgets.allow_direct_chat.value}",
                  "default_prep_minutes": "${widgets.default_prep_minutes.value}",
                  "payment_instructions": "${widgets.payment_instructions.value}"
                }
              }
            }
          ]
        }
      ]
    }
  ]
}

{
  "version": "6.3",
  "screens": [
    {
      "id": "s_settings",
      "title": "Admin settings",
      "layout": { "type": "single_column" },
      "widgets": [
        { "type": "text_input", "id": "display_name", "label": "Display name" },
        {
          "type": "footer_buttons",
          "buttons": [
            {
              "id": "BTN_SAVE",
              "title": "Save",
              "action": {
                "type": "data_exchange",
                "id": "a_admin_display_name",
                "fields": { "display_name": "${widgets.display_name.value}" }
              }
            }
          ]
        }
      ]
    }
  ]
}

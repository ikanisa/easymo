{
  "version": "6.3",
  "screens": [
    {
      "id": "s_biz_list",
      "title": "Businesses",
      "layout": { "type": "single_column" },
      "widgets": [
        {
          "type": "radio_list",
          "id": "w_biz",
          "options_data_binding": "businesses"
        },
        {
          "type": "footer_buttons",
          "buttons": [
            {
              "id": "BTN_BIZ_REFRESH",
              "title": "Refresh",
              "action": {
                "type": "data_exchange",
                "id": "a_admin_market_refresh"
              }
            }
          ]
        }
      ],
      "events": {
        "on_item_select": {
          "widget_id": "w_biz",
          "action": {
            "type": "navigate",
            "next": "s_biz_detail",
            "params": { "business_id": "${selected.id}" }
          }
        }
      }
    },
    {
      "id": "s_biz_detail",
      "title": "Business",
      "layout": { "type": "single_column" },
      "widgets": [
        {
          "type": "text_block",
          "id": "w_biz",
          "text": "${params.business_id}"
        },
        {
          "type": "footer_buttons",
          "buttons": [
            {
              "id": "BTN_APPROVE_BIZ",
              "title": "Approve",
              "action": {
                "type": "data_exchange",
                "id": "a_admin_biz_approve",
                "fields": { "business_id": "${params.business_id}" }
              }
            },
            {
              "id": "BTN_HIDE_BIZ",
              "title": "Hide",
              "action": {
                "type": "data_exchange",
                "id": "a_admin_biz_hide",
                "fields": { "business_id": "${params.business_id}" }
              }
            },
            {
              "id": "BTN_BIZ_BACK",
              "title": "Back",
              "action": { "type": "navigate", "next": "s_biz_list" }
            }
          ]
        }
      ]
    }
  ]
}

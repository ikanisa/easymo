{
  "version": "6.3",
  "screens": [
    {
      "id": "s_leads_list",
      "title": "Insurance leads",
      "layout": { "type": "single_column" },
      "widgets": [
        {
          "type": "radio_list",
          "id": "w_leads",
          "options_data_binding": "leads"
        },
        {
          "type": "footer_buttons",
          "buttons": [
            {
              "id": "BTN_LEADS_REFRESH",
              "title": "Refresh",
              "action": {
                "type": "data_exchange",
                "id": "a_admin_insurance_refresh"
              }
            }
          ]
        }
      ],
      "events": {
        "on_item_select": {
          "widget_id": "w_leads",
          "action": {
            "type": "navigate",
            "next": "s_lead_detail",
            "params": { "lead_id": "${selected.id}" }
          }
        }
      }
    },
    {
      "id": "s_lead_detail",
      "title": "Lead detail",
      "layout": { "type": "single_column" },
      "widgets": [
        { "type": "text_block", "id": "w_lead", "text": "${params.lead_id}" },
        {
          "type": "footer_buttons",
          "buttons": [
            {
              "id": "BTN_MARK_REVIEWED",
              "title": "Mark reviewed",
              "action": {
                "type": "data_exchange",
                "id": "a_admin_lead_mark_reviewed",
                "fields": { "lead_id": "${params.lead_id}" }
              }
            },
            {
              "id": "BTN_ASSIGN",
              "title": "Assign owner",
              "action": {
                "type": "data_exchange",
                "id": "a_admin_lead_assign_owner",
                "fields": {
                  "lead_id": "${params.lead_id}",
                  "owner_wa": "${widgets?.assign?.value}"
                }
              }
            },
            {
              "id": "BTN_REQUEST_REUPLOAD",
              "title": "Request re-upload",
              "action": {
                "type": "data_exchange",
                "id": "a_admin_lead_request_reupload",
                "fields": { "lead_id": "${params.lead_id}" }
              }
            }
          ]
        }
      ]
    }
  ]
}

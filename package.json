{
  "name": "@easymo/monorepo",
  "private": true,
  "version": "0.0.0",
  "type": "commonjs",
  "scripts": {
    "prebuild": "node ./scripts/assert-no-service-role-in-client.mjs",
    "build": "pnpm --filter @va/shared build && pnpm --filter @easymo/commons build && pnpm --filter @easymo/admin-app run build",
    "netlify:build": "pnpm --filter @va/shared build && pnpm --filter @easymo/commons build && cd admin-app && pnpm build",
    "lint": "pnpm --filter @easymo/admin-app run lint",
    "lint:fix": "pnpm --filter @easymo/admin-app run lint -- --fix",
    "format": "prettier --write docs/ eslint.config.js prettier.config.js package.json .prettierignore",
    "format:check": "prettier --check docs/ eslint.config.js prettier.config.js package.json .prettierignore",
    "type-check": "pnpm --filter @easymo/admin-app run typecheck",
    "typecheck": "pnpm type-check",
    "test": "pnpm exec vitest run && pnpm --filter @easymo/admin-app exec vitest run --config vitest.config.smoke.cjs",
    "test:functions": "deno test --allow-env --allow-read --allow-net supabase/functions/_shared",
    "test:watch": "vitest",
    "schema:verify": "node ./scripts/check-schema-alignment.mjs",
    "health": "node ./scripts/health-check.mjs",
    "seed:remote": "bash ./scripts/seed-remote.sh",
    "functions:deploy": "supabase functions deploy admin-settings admin-stats admin-users admin-trips wa-webhook",
    "embeddings:sync": "node ./scripts/embeddings/ingest-documents.mjs",
    "diagnostics:supabase": "node ./scripts/test-supabase-connection.mjs"
  },
  "dependencies": {
    "@easymo/ui": "workspace:*",
    "@va/shared": "workspace:*",
    "@supabase/supabase-js": "^2.79.0",
    "vitest": "^3.2.4",
    "jsdom": "^26.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.37.0",
    "@tailwindcss/typography": "^0.5.16",
    "@types/node": "^22.18.12",
    "@vitejs/plugin-react-swc": "^3.11.0",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.32.0",
    "globals": "^15.15.0",
    "prettier": "^3.4.2",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.38.0",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=18.18.0",
    "pnpm": ">=8"
  }
}

{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./*"
      ],
      "@/lib/test-utils/factories": [
        "types/test-utils-factories.d.ts"
      ],
      "@/lib/test-utils/mock-base": [
        "types/test-utils-mock-base.d.ts"
      ],
      "@easymo/ui": [
        "../packages/ui/src/index.ts"
      ],
      "@easymo/ui/*": [
        "../packages/ui/src/*"
      ],
      "@easymo/ui/tokens": [
        "../packages/ui/tokens/index.ts"
      ],
      "@easymo/video-agent-schema": [
        "../packages/video-agent-schema/dist/index"
      ],
      "@easymo/video-agent-schema/*": [
        "../packages/video-agent-schema/dist/*"
      ],
      "@easymo/commons": [
        "../packages/commons/src/index.ts"
      ],
      "@easymo/commons/*": [
        "../packages/commons/src/*"
      ],
      "@va/shared": [
        "../packages/shared/src/index.ts"
      ],
      "@va/shared/*": [
        "../packages/shared/src/*"
      ]
    }
  },
  "include": [
    "app/api/settings/**/*.ts",
    "app/api/settings/**/*.tsx",
    "app/api/notifications/**/*.ts",
    "app/api/notifications/**/*.tsx",
    "app/api/stations/**/*.ts",
    "app/api/stations/**/*.tsx",
    "app/api/logs/**/*.ts",
    "app/api/logs/**/*.tsx",
    "app/api/qr/**/*.ts",
    "app/api/qr/**/*.tsx",
    "app/api/admin/**/*.ts",
    "app/api/admin/**/*.tsx",
    "app/api/storage/**/*.ts",
    "app/api/storage/**/*.tsx",
    "app/api/users/**/*.ts",
    "app/api/users/**/*.tsx",
    "app/api/agent-tasks/**/*.ts",
    "app/api/agent-tasks/**/*.tsx",
    "app/api/agent-tools/**/*.ts",
    "app/api/agent-tools/**/*.tsx",
    "app/api/agent-orchestration/**/*.ts",
    "app/api/agent-orchestration/**/*.tsx",
    "app/api/agent-admin/**/*.ts",
    "app/api/agent-admin/**/*.tsx",
    
    "lib/**/*.ts",
    "lib/**/*.tsx",
    "middleware.ts",
    "types/**/*.d.ts",
    "app/(panel)/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "tests",
    "app/(panel)/**/page.tsx",
    "app/(panel)/layout.tsx",
    "lib/test-utils"
  ]
}

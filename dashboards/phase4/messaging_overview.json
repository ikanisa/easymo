{
  "title": "Messaging & Orchestrator",
  "panels": [
    {
      "type": "graph",
      "title": "Kafka Lag",
      "targets": [
        {
          "expr": "max(kafka_consumer_group_lag{group=\"broker-orchestrator-group\"})"
        }
      ]
    },
    {
      "type": "table",
      "title": "Retry Volume",
      "targets": [
        {
          "expr": "sum(rate(broker_retry_events_total[5m])) by (topic)"
        }
      ]
    },
    {
      "type": "table",
      "title": "Policy blocks (5m)",
      "targets": [
        {
          "expr": "sum(rate(policy_outbound_decision_total{allowed=\"0\"}[5m])) by (reason)"
        }
      ]
    },
    {
      "type": "stat",
      "title": "Throttle blocks/min",
      "targets": [
        {
          "expr": "sum(rate(policy_outbound_decision_total{stage=\"throttle\"}[5m]))"
        }
      ]
    }
  ]
}

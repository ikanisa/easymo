{
  "version": "6.3",
  "screens": [
    {
      "id": "s_hub",
      "title": "Admin hub",
      "layout": { "type": "single_column" },
      "widgets": [
        {
          "type": "list",
          "id": "w_operations",
          "header": "Operations",
          "options_data_binding": "sections.operations",
          "selection_mode": "single"
        },
        {
          "type": "list",
          "id": "w_growth",
          "header": "Growth & comms",
          "options_data_binding": "sections.growth",
          "selection_mode": "single"
        },
        {
          "type": "list",
          "id": "w_trust",
          "header": "Trust & safety",
          "options_data_binding": "sections.trust",
          "selection_mode": "single"
        },
        {
          "type": "list",
          "id": "w_diag",
          "header": "Diagnostics",
          "options_data_binding": "sections.diagnostics",
          "selection_mode": "single"
        },
        {
          "type": "footer_buttons",
          "buttons": [
            {
              "id": "BTN_TODAY",
              "title": "Today",
              "action": { "type": "data_exchange", "id": "a_admin_open_today" }
            },
            {
              "id": "BTN_ALERTS",
              "title": "Alerts",
              "action": { "type": "data_exchange", "id": "a_admin_open_alerts" }
            },
            {
              "id": "BTN_SETTINGS",
              "title": "Settings",
              "action": {
                "type": "data_exchange",
                "id": "a_admin_open_settings"
              }
            }
          ]
        }
      ],
      "events": {
        "on_item_select": [
          {
            "widget_id": "w_operations",
            "action": {
              "type": "data_exchange",
              "id": "a_admin_open_flow",
              "fields": { "row_id": "${selected.id}" }
            }
          },
          {
            "widget_id": "w_growth",
            "action": {
              "type": "data_exchange",
              "id": "a_admin_open_flow",
              "fields": { "row_id": "${selected.id}" }
            }
          },
          {
            "widget_id": "w_trust",
            "action": {
              "type": "data_exchange",
              "id": "a_admin_open_flow",
              "fields": { "row_id": "${selected.id}" }
            }
          },
          {
            "widget_id": "w_diag",
            "action": {
              "type": "data_exchange",
              "id": "a_admin_open_flow",
              "fields": { "row_id": "${selected.id}" }
            }
          }
        ]
      }
    },
    {
      "id": "s_admin_pin",
      "title": "Enter PIN",
      "layout": { "type": "single_column" },
      "data_exchange": {
        "submit": { "action": { "id": "a_admin_pin_submit" } }
      },
      "widgets": [
        {
          "type": "text_input",
          "id": "pin",
          "label": "Admin PIN",
          "input_type": "number",
          "max_chars": 6
        },
        {
          "type": "footer_buttons",
          "buttons": [
            {
              "id": "BTN_SUBMIT_PIN",
              "title": "Submit",
              "action": { "type": "data_exchange", "id": "a_admin_pin_submit" }
            }
          ]
        }
      ]
    }
  ]
}

{
  "version": "6.3",
  "screens": [
    {
      "id": "s_diag_home",
      "title": "Diagnostics",
      "layout": { "type": "single_column" },
      "widgets": [
        { "type": "text_input", "id": "trip_id", "label": "Trip id" },
        {
          "type": "footer_buttons",
          "buttons": [
            {
              "id": "BTN_MATCH_DIAG",
              "title": "Match diag",
              "action": {
                "type": "data_exchange",
                "id": "a_admin_diag_match",
                "fields": { "trip_id": "${widgets.trip_id.value}" }
              }
            }
          ]
        }
      ]
    },
    {
      "id": "s_diag_match",
      "title": "Match diag",
      "layout": { "type": "single_column" },
      "widgets": [
        {
          "type": "text_block",
          "id": "w_diag_match",
          "text": "${data.trip.id}\n${data.trip.status}"
        }
      ]
    },
    {
      "id": "s_diag_health",
      "title": "System health",
      "layout": { "type": "single_column" },
      "widgets": [
        {
          "type": "text_block",
          "id": "w_health",
          "text": "Config: ${data.config}"
        }
      ]
    },
    {
      "id": "s_diag_logs",
      "title": "Recent logs",
      "layout": { "type": "single_column" },
      "widgets": [
        { "type": "list", "id": "w_logs", "options_data_binding": "logs" }
      ]
    }
  ]
}

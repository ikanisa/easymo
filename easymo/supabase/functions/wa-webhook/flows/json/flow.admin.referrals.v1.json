{
  "version": "6.3",
  "screens": [
    {
      "id": "s_referrals_queue",
      "title": "Referrals",
      "layout": { "type": "single_column" },
      "widgets": [
        {
          "type": "radio_list",
          "id": "w_referrals",
          "options_data_binding": "referrals"
        },
        {
          "type": "footer_buttons",
          "buttons": [
            {
              "id": "BTN_REF_REFRESH",
              "title": "Refresh",
              "action": { "type": "data_exchange", "id": "a_admin_ref_refresh" }
            }
          ]
        }
      ],
      "events": {
        "on_item_select": {
          "widget_id": "w_referrals",
          "action": {
            "type": "navigate",
            "next": "s_ref_detail",
            "params": { "code": "${selected.code}" }
          }
        }
      }
    },
    {
      "id": "s_ref_detail",
      "title": "Referral detail",
      "layout": { "type": "single_column" },
      "widgets": [
        { "type": "text_block", "id": "w_ref", "text": "${params.code}" },
        {
          "type": "footer_buttons",
          "buttons": [
            {
              "id": "BTN_REF_FREEZE",
              "title": "Freeze",
              "action": {
                "type": "data_exchange",
                "id": "a_admin_ref_freeze",
                "fields": { "code": "${params.code}" }
              }
            },
            {
              "id": "BTN_REF_UNFREEZE",
              "title": "Unfreeze",
              "action": {
                "type": "data_exchange",
                "id": "a_admin_ref_unfreeze",
                "fields": { "code": "${params.code}" }
              }
            },
            {
              "id": "BTN_REF_BACK",
              "title": "Back",
              "action": { "type": "navigate", "next": "s_referrals_queue" }
            }
          ]
        }
      ]
    }
  ]
}

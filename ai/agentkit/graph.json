{
  "agents": [
    {
      "id": "voice_agent",
      "type": "realtime",
      "description": "Voice agent for SIP/phone calls using OpenAI Realtime API",
      "tools": ["lookup_customer", "create_voucher"],
      "entry": true,
      "model": "gpt-4o-realtime-preview"
    },
    {
      "id": "voucher_agent",
      "type": "responses",
      "description": "Text-based voucher agent for WhatsApp and other channels",
      "tools": [
        "lookup_customer",
        "create_voucher",
        "redeem_voucher",
        "void_voucher"
      ],
      "model": "gpt-4o-mini"
    },
    {
      "id": "customer_support_agent",
      "type": "responses",
      "description": "General customer support agent",
      "tools": ["lookup_customer"],
      "model": "gpt-4o-mini"
    }
  ],
  "routes": [
    {
      "from": "voice_agent",
      "to": "voucher_agent",
      "when": "voucher_intent",
      "description": "Route voice calls to voucher agent for complex operations"
    },
    {
      "from": "customer_support_agent",
      "to": "voucher_agent",
      "when": "voucher_request",
      "description": "Escalate voucher requests from support to voucher agent"
    }
  ],
  "metadata": {
    "version": "1.0.0",
    "description": "AgentKit graph configuration for EasyMO AI agents"
  }
}
